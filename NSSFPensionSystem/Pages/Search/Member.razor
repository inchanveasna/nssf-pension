    protected List<String> TableHeaders = new List<string>() { "ល.រ", "លេខអត្ត.", "គោត្តនាម និងនាម", "គោត្តនាម និងនាម (ឡាតាំង)", "ភេទ", "ថ្ងៃខែឆ្នាំកំណើត", "សញ្ជាតិ", "សកម្មភាព" };
    protected PaginationModel Pagination = new PaginationModel();

    protected void OnSearch()
    {

    }

