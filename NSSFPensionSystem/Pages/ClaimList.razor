            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="form-group">
                        <a id="btn-add-new" class="btn btn-info" href="javascript:void(0);" @onclick="OnAddNew">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus">
                                <line x1="12" y1="5" x2="12" y2="19"></line>
                                <line x1="5" y1="12" x2="19" y2="12"></line>
                            </svg>
                            បន្ថែមថ្មី
                        </a>
                    </div>
                </div>

                <div class="col-md-9">
                    <div class="form-row justify-content-end">
                        <div class="form-group col-md-3">
                            <input type="text" class="form-control masked-code" placeholder="លេខទាមទារ" id="claimcode" />
                        </div>

                        <div class="form-group col-md-3">
                            <input type="text" class="form-control masked-benid" placeholder="លេខអត្ត." id="benid" />
                        </div>

                        <div class="form-group col-md-3">
                            <select id="pensiontype" class="form-control">
                                @foreach (PensionTypeModel p in PensionTypes)
                                {
                                    <option value="@p.TypeId">@p.TypeNameKh</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <a class="btn btn-info">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
                                ស្វែងរក
                            </a>
                        </div>

                    </div>
                </div>
            </div>

            <div class="tab-content" id="icon-pills-tabContent">
                @foreach (ClaimStatusModel status in ClaimStatuses)
                {
                    <div class="tab-pane fade @(ClaimStatuses.IndexOf(status)==0? "show active" : "")" id=@("v-pills" + status.StaId) role="tabpanel" aria-labelledby=@("v-pills-tab" + status.StaId)>
                        <ClaimListTable OnEdit="(val) => OnEdit(val)" ClaimList="@ClaimList" TableHeader="@TableHeader" ClaimStatuses="@ClaimStatuses" PensionTypes="@PensionTypes" StatusId="status.StaId" />
                    </div>
                }

                <Pagination Paginate="Paginate" OnChangedPage="OnPageChanged"/>
            </div>
        </div>
    </div>


